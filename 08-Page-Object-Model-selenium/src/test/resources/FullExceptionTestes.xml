<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Full Exception Tests" verbose="1">
    <test name="NoSuchElementException Test">
        <classes>
            <class name="com.testautomation.exceptionstest.ExceptionTests">
                <methods>
                    <include name="noSuchElementExceptionTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="TimeoutException Test">
        <classes>
            <class name="com.testautomation.exceptionstest.ExceptionTests">
                <methods>
                    <include name="timeoutExceptionTest"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="elementNotInteractableException Test">
       <parameter name="text" value="Sushi"></parameter>
        <classes>
            <class name="com.testautomation.exceptionstest.ExceptionTests">
                <methods>
                    <include name="elementNotInteractableExceptionTest"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="InvalidElementStateException Test">
        <parameter name="text" value="Sushi"></parameter>
        <classes>
            <class name="com.testautomation.exceptionstest.ExceptionTests">
                <methods>
                    <include name="invalidElementStateExceptionTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="StaleElementReferenceException Test">
        <classes>
            <class name="com.testautomation.exceptionstest.ExceptionTests">
                <methods>
                    <include name="staleElementReferenceExceptionTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>

